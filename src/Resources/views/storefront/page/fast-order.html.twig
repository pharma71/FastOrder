{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <div class="container p-3 my-3 bg-primary text-white">
        <h1 class="text-center mb-4">Fast Order</h1>
        <form action="{{ path('frontend.fast_order_add') }}" method="POST" id="fast-order-form">
            <div class="row mb-3 product-row">
                <div class="col-6">
                    <label for="product_0" class="form-label">Product Number</label>
                    <input type="text" id="product_0" name="products[0][productNumber]" 
                           class="form-control" required 
                           style="border: 2px solid #007bff;">
                </div>
                <div class="col-6">
                    <label for="quantity_0" class="form-label">Quantity</label>
                    <input type="number" id="quantity_0" name="products[0][quantity]" 
                           class="form-control" required min="1" 
                           style="border: 2px solid #28a745;">
                    <input type="hidden" id="price_0" name="products[0][price]" 
                    >
                </div>
            </div>
            {# Weitere Zeilen für Produkte hinzufügen #}
            {% for i in 1..9 %}
                <div class="row mb-3 product-row">
                    <div class="col-6">
                        <label for="product_{{ i }}" class="form-label">Product Number</label>
                        <input type="text" id="product_{{ i }}" name="products[{{ i }}][productNumber]" 
                               class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="quantity_{{ i }}" class="form-label">Quantity</label>
                        <input type="number" id="quantity_{{ i }}" name="products[{{ i }}][quantity]" 
                               class="form-control" min="1">
                        <input type="hidden" id="price_{{ i }}" name="products[{{ i }}][price]" 
                        >
                    </div>
                </div>
            {% endfor %}
            <div id="total-sum">
                <strong>Total Sum:</strong> <span id="total-value">0.00</span>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-secondary" 
                        style="padding: 10px 20px; font-size: 16px;">
                    Add to Cart
                </button>
            </div>
        </form>
    </div>
{% endblock %}


